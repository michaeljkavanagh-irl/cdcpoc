{
  "name": "postgres-source-connector-v2",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "tasks.max": "1",
    "database.hostname": "${secretsmanager:prod/postgres/credentials:hostname}",
    "database.port": "${secretsmanager:prod/postgres/credentials:port}",
    "database.user": "${secretsmanager:prod/postgres/credentials:username}",
    "database.password": "${secretsmanager:prod/postgres/credentials:password}",
    "database.dbname": "${secretsmanager:prod/postgres/credentials:database}",
    "database.server.name": "dev.opusccc",
    "table.include.list": "public.*",
    "plugin.name": "pgoutput",
    "publication.autocreate.mode": "filtered",
    "slot.name": "debezium_northwind_slot_v2",
    "topic.prefix": "northwind-source",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "snapshot.mode": "initial",
    "time.precision.mode": "connect",
    "decimal.handling.mode": "double",
    "transforms": "routeRows",
    "transforms.routeRows.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.routeRows.regex": ".*",
    "transforms.routeRows.replacement": "northwind.clean.topic"
  }
}
